<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/Black">

    <TextView
        android:id="@+id/AuthReqTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="19dp"
        android:text="Partner Details"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/PartnerListView" />

    <ListView
        android:id="@+id/PartnerListView"
        android:layout_width="350dp"
        android:layout_height="445dp"
        android:layout_below="@+id/AuthReqTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/PartnerListView"
        android:layout_below="@+id/PartnerListView"
        android:layout_marginTop="20dp"
        android:background="@color/navigationBarColor"
        android:onClick="goBack"
        android:text="OK" />

</RelativeLayout>