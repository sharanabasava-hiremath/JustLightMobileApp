<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:paddingTop="20dp"
        android:textColor="@color/textColorPrimary"
        android:text="SMART LIGHTING" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="12dp"
        android:paddingTop="5dp"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:text="AFTER INSTALLATION WITH SMART LIGHTING" />


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/smartlighting1"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:paddingTop="20dp"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:text="Go Ahead,Explore!!" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/SmartLighting1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:drawable/btn_default"
        android:backgroundTint="@color/colorPrimary"
        android:text="Motion Detection"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/SmartLighting2"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="80dp"
        android:background="@android:drawable/btn_default"
        android:backgroundTint="@color/grey"
        android:text="Occupancy Detection"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/SmartLighting3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:drawable/btn_default"
        android:backgroundTint="@color/colorPrimary"
        android:text="Daylight Harvest Sensor"
        android:textColor="@color/Black" />
</LinearLayout>